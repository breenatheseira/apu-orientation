<%= form_for(@document) do |f| %>
  <% if @document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@document.errors.count, "error") %> prohibited this document from being saved:</h2>
      <ul>
      <% @document.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table>
  <tr>
    <td><%= f.label :name %></td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td><%= f.label :document_type %></td>
    <td><%= f.select :document_type, [['Student Handbook', 'Student Handbook'], 
                            ['Orientation Schedule', 'Orientation Schedule'],
                            ['Fee Schedule', 'Fee Schedule'],
                            ['Course Schedule', 'Course Schedule']] %></td>
  </tr>
  <tr>
    <td>Upload Document</td>
    <td><%= f.file_field :document_url %></td>
  </tr>
  <tr>
    <td><%= f.label "Visibility" %></td>
    <td><%= f.check_box :visible_status %></td>
  </tr>
</table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
