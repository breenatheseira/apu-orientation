<h1>Listing Documents</h1>

<div class="text-center">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th style="text-align:center">Document ID</th>
      <th style="text-align:center">Document Name</th>
      <th style="text-align:center">Document Type</th>
      <th style="text-align:center">Document URL</th>
      <th style="text-align:center">Date Added</th>
      <th style="text-align:center">Last Modified</th>
      <th style="text-align:center">Intake</th>
      <th style="text-align:center" colspan="3">Document Action</th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |d| %>
      <tr>
        <td><%= d.id %></td>
        <td><%= d.name %></td>
        <td><%= d.document_type %></td>
        <td><%= d.document_url %></td>
        <td><%= I18n.l d.created_at, format: :short %></td>
        <td><%= I18n.l d.updated_at, format: :short %></td>
        <td><%= d.intake_code %></td>
        <td><%= link_to "Show", d.document_url.to_s, target: :_blank %></td>
        <td><%= link_to 'Edit', edit_document_path(d) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Document', new_document_path, class: "btn btn-success btn-md", style: "color:white" %>
<%= link_to "Back", admins_menu_path, class: "btn btn-default btn-md" %>
