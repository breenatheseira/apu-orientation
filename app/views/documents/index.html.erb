<h1>Listing Documents</h1>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Document ID</th>
      <th>Document Name</th>
      <th>Document Type</th>
      <th>Document URL</th>
      <th>Date Added</th>
      <th>Last Modified</th>
      <th>Document Status</th>
      <th colspan="3">Document Action</th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |d| %>
      <tr>
        <td><%= d.id %></td>
        <td><%= d.name %></td>
        <td><%= d.document_type %></td>
        <td><%= d.document_url %></td>
        <td><%= I18n.l d.created_at, format: :short %></td>
        <td><%= I18n.l d.updated_at, format: :short %></td>
        <td>
          <% if d.visible_status == true %>
            <%= "Visible" %>
          <% else %>
            <%= "Hidden" %>
          <% end %>
        </td>
        <td><%= link_to "Show", d.document_url.to_s, target: :_blank %></td>
        <td><%= link_to 'Edit', edit_document_path(d) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

